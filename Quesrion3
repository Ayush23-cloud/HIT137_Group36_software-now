import turtle

def draw_edge(length, depth):
    """
    Recursive function to draw one edge of the fractal pattern.
    """
    if depth == 0:
        turtle.forward(length)
    else:
        length /= 3
        draw_edge(length, depth - 1)
        turtle.left(60)    # turn to form triangle indentation
        draw_edge(length, depth - 1)
        turtle.right(120)  # indentation inward
        draw_edge(length, depth - 1)
        turtle.left(60)    # restore angle
        draw_edge(length, depth - 1)

def draw_polygon(sides, length, depth):
    """
    Draw a polygon with recursive fractal edges.
    """
    angle = 360 / sides
    for _ in range(sides):
        draw_edge(length, depth)
        turtle.right(angle)

def main():
    # User inputs
    sides = int(input("Enter the number of sides: "))
    length = int(input("Enter the side length: "))
    depth = int(input("Enter the recursion depth: "))

    # Setup turtle
    turtle.speed(0)  # fastest drawing
    turtle.hideturtle()
    turtle.penup()
    turtle.goto(-length, length/2)  # reposition for visibility
    turtle.pendown()

    # Draw fractal polygon
    draw_polygon(sides, length, depth)

    turtle.done()

if __name__ == "__main__":
    main()
